<div class="min-h-screen bg-gray-50 pb-20">
  <div class="px-4 py-6">
    <div class="max-w-4xl mx-auto">
      <!-- ヘッダー -->
      <div class="mb-6">
        <div class="flex justify-between items-center mb-3">
          <h1 class="text-2xl font-bold text-gray-800">投稿一覧</h1>
          <%= link_to new_post_path, class: "bg-green-500 hover:bg-green-600 text-white font-semibold px-6 py-3 rounded-xl transition-colors shadow-md flex items-center gap-2" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            新規投稿
          <% end %>
        </div>
        
        <!-- 色別フィルタリング表示 -->
        <% if @filtered_color_theme %>
          <div class="flex items-center gap-3 bg-green-50 rounded-lg p-3 border border-green-200">
            <div class="w-8 h-8 rounded-full shadow-sm" style="background-color: <%= @filtered_color_theme.color_code %>;"></div>
            <div class="flex-1">
              <p class="text-sm font-semibold text-gray-700"><%= @filtered_color_theme.color_name %>の投稿</p>
            </div>
            <%= link_to posts_path, class: "text-gray-500 hover:text-gray-700" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>

      <% if @posts.any? %>
        <!-- 投稿一覧（1カラムレイアウト） -->
        <div class="space-y-4">
          <% @posts.each do |post| %>
            <%= link_to post_path(post), class: "block" do %>
              <div class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition-all">
                <% if post.image.attached? %>
                  <!-- 写真表示 -->
                  <div class="relative">
                    <%= image_tag post.image.variant(resize_to_limit: [800, 800]), 
                        class: "w-full aspect-square object-cover" %>
                  </div>
                <% end %>
                
                <!-- 投稿情報（下部） -->
                <div class="p-4">
                  <div class="flex items-center justify-between mb-3">
                    <div class="flex items-center gap-2">
                      <div class="w-10 h-10 rounded-full shadow-sm" style="background-color: <%= post.color_theme.color_code %>;"></div>
                      <div>
                        <p class="font-bold text-base text-gray-900"><%= post.color_theme.color_name %></p>
                        <p class="text-xs text-gray-400"><%= post.posted_at.strftime("%m/%d %H:%M") %></p>
                      </div>
                    </div>
                  </div>
                  
                  <% if post.location_name.present? %>
                    <div class="flex items-center gap-1 mb-2 text-gray-500">
                      <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                      </svg>
                      <p class="text-sm"><%= post.location_name %></p>
                    </div>
                  <% end %>
                  
                  <% if post.description.present? %>
                    <p class="text-gray-600 text-sm leading-relaxed">
                      <%= post.description %>
                    </p>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <!-- 投稿がない場合 -->
        <div class="bg-white rounded-2xl shadow-md p-12 text-center">
          <div class="mb-6">
            <svg class="w-24 h-24 text-gray-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
          <h2 class="text-xl font-bold text-gray-700 mb-2">まだ投稿がありません</h2>
          <p class="text-gray-500 mb-6">最初の投稿を作成してみましょう！</p>
          <%= link_to new_post_path, class: "inline-flex items-center gap-2 bg-green-500 hover:bg-green-600 text-white font-semibold px-8 py-3 rounded-xl transition-colors shadow-md" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            投稿を作成
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
