<%# Google Maps APIを読み込む（位置情報がある場合のみ） %>
<% if @post.latitude.present? && @post.longitude.present? %>
  <% content_for :head do %>
    <% if ENV['GOOGLE_MAPS_API_KEY'].present? %>
      <script>
        (function() {
          window.initGoogleMaps = function() {
            window.dispatchEvent(new Event('google-maps-loaded'));
          }
        })();
      </script>
      <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&callback=initGoogleMaps&libraries=places&language=ja">
      </script>
    <% end %>
  <% end %>
<% end %>

<div class="min-h-screen bg-gray-50 pb-20">
  <div class="max-w-2xl mx-auto">
    <!-- 戻るボタン -->
    <div class="sticky top-16 z-10 bg-gray-50 px-4 py-3 flex items-center gap-3">
      <%= link_to posts_path, class: "flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <span class="font-semibold">一覧に戻る</span>
      <% end %>
    </div>

    <!-- 投稿カード -->
    <div class="px-4 pb-6">
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <% if @post.image.attached? %>
          <!-- 写真表示 -->
          <div class="relative">
            <%= image_tag @post.image.variant(resize_to_limit: [1200, 1200]), 
                class: "w-full aspect-square object-cover" %>
          </div>
        <% end %>
        
        <!-- 投稿情報 -->
        <div class="p-6">
          <!-- 色情報 -->
          <div class="flex items-center gap-3 mb-4 pb-4 border-b border-gray-100">
            <div class="w-12 h-12 rounded-full shadow-md" style="background-color: <%= @post.color_theme.color_code %>;"></div>
            <div class="flex-1">
              <h1 class="text-2xl font-bold text-gray-900"><%= @post.color_theme.color_name %></h1>
              <p class="text-sm text-gray-500 font-mono"><%= @post.color_theme.color_code %></p>
            </div>
          </div>

          <!-- 日時 -->
          <div class="mb-4">
            <div class="flex items-center gap-2 text-gray-600">
              <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <p class="text-base"><%= @post.posted_at.strftime("%Y年%m月%d日 %H:%M") %></p>
            </div>
          </div>
          
          <!-- 場所情報 -->
          <% if @post.location_name.present? || (@post.latitude.present? && @post.longitude.present?) %>
            <div class="mb-4">
              <div class="flex items-start gap-2 text-gray-600 mb-3">
                <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                </svg>
                <div>
                  <% if @post.location_name.present? %>
                    <p class="text-base font-semibold"><%= @post.location_name %></p>
                  <% end %>
                  <% if @post.latitude.present? && @post.longitude.present? %>
                    <p class="text-xs text-gray-400 mt-1">
                      <%= @post.latitude.round(6) %>, <%= @post.longitude.round(6) %>
                    </p>
                  <% end %>
                </div>
              </div>
              
              <!-- Google Map表示 -->
              <% if @post.latitude.present? && @post.longitude.present? %>
                <div 
                  data-controller="map" 
                  data-map-latitude-value="<%= @post.latitude %>"
                  data-map-longitude-value="<%= @post.longitude %>"
                  data-map-location-name-value="<%= @post.location_name %>"
                  class="w-full h-64 rounded-xl overflow-hidden shadow-md border border-gray-200"
                  style="min-height: 256px;"
                ></div>
              <% end %>
            </div>
          <% end %>
          
          <!-- 説明文 -->
          <% if @post.description.present? %>
            <div class="mb-6">
              <h2 class="text-sm font-semibold text-gray-500 mb-2">説明</h2>
              <p class="text-base text-gray-700 leading-relaxed whitespace-pre-wrap"><%= @post.description %></p>
            </div>
          <% end %>

          <!-- アクションボタン -->
          <div class="flex gap-3 pt-4 border-t border-gray-100">
            <%= link_to edit_post_path(@post), class: "flex-1 flex items-center justify-center gap-2 bg-green-500 hover:bg-green-600 text-white font-semibold py-3 rounded-xl transition-colors shadow-md" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              編集
            <% end %>
            <%= button_to post_path(@post), method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, 
                class: "flex-1 flex items-center justify-center gap-2 bg-red-500 hover:bg-red-600 text-white font-semibold py-3 rounded-xl transition-colors shadow-md" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              削除
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
