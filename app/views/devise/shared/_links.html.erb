<div class="space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログインはこちら", new_session_path(resource_name), class: "text-sm text-green-600 hover:text-green-500" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "アカウント作成はこちら", new_registration_path(resource_name), class: "text-sm text-green-600 hover:text-green-500" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "text-sm text-gray-600 hover:text-gray-500" %>
  <% end %>
</div>
