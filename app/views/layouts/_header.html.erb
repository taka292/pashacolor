<!-- 共通ヘッダー -->
<header class="bg-white border-b border-gray-200 sticky top-0 z-50"
        data-controller="menu"
        data-action="keydown@window->menu#closeOnEscape">
  <div class="px-4 py-3">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center" do %>
          <h1 class="text-2xl font-bold">
            <span class="text-green-500">パ</span>
            <span class="text-blue-500">シャ</span>
            <span class="text-orange-500">か</span>
            <span class="text-pink-500">ら</span>
          </h1>
        <% end %>
      </div>
      <div class="flex items-center gap-2">
        <!-- ハンバーガーメニューボタン -->
        <button 
          data-menu-target="toggle"
          data-action="click->menu#toggle"
          class="p-2 text-gray-600 hover:text-gray-900 focus:outline-none"
          aria-label="メニューを開く"
          aria-expanded="false"
        >
          <svg data-menu-target="menuIcon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg data-menu-target="closeIcon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- ハンバーガーメニュー（ドロワー） -->
  <div 
    data-menu-target="drawer"
    data-action="click->menu#closeOnBackdrop"
    class="hidden fixed inset-0 z-40 bg-black/30"
    aria-hidden="true"
  >
    <div class="fixed right-0 top-0 h-full w-64 bg-white shadow-xl transform transition-transform duration-300 ease-in-out">
      <div class="flex flex-col h-full">
        <!-- メニューヘッダー -->
        <div class="flex items-center justify-between p-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-800">メニュー</h2>
          <button 
            data-action="click->menu#close"
            class="p-2 text-gray-600 hover:text-gray-900 focus:outline-none"
            aria-label="メニューを閉じる"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- メニューコンテンツ -->
        <nav class="flex-1 overflow-y-auto p-4">
          <% if user_signed_in? %>
            <!-- ログイン時のメニュー -->
            <div class="space-y-2">
              <div class="px-3 py-2 mb-4 border-b border-gray-200">
                <p class="text-sm text-gray-600">ログイン中</p>
                <p class="text-base font-semibold text-gray-800"><%= current_user.name.presence || current_user.email %></p>
              </div>
              
              <%= link_to root_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-green-50 hover:text-green-700 transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                <span>ホーム</span>
              <% end %>

              <%= link_to edit_user_registration_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-green-50 hover:text-green-700 transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <span>アカウント設定</span>
              <% end %>

              <%= button_to destroy_user_session_path, method: :delete, class: "w-full flex items-center gap-3 px-4 py-3 rounded-lg text-red-600 hover:bg-red-50 transition-colors text-left", form: { class: "w-full", data: { turbo: true } } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                <span>ログアウト</span>
              <% end %>
            </div>
          <% else %>
            <!-- 未ログイン時のメニュー -->
            <div class="space-y-2">
              <%= link_to new_user_session_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg bg-green-100 text-green-700 hover:bg-green-200 transition-colors font-semibold" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                </svg>
                <span>ログイン</span>
              <% end %>

              <%= link_to new_user_registration_path, class: "flex items-center gap-3 px-4 py-3 rounded-lg border-2 border-green-200 text-green-700 hover:bg-green-50 transition-colors font-semibold" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
                <span>新規登録</span>
              <% end %>
            </div>
          <% end %>
        </nav>
      </div>
    </div>
  </div>
</header>

