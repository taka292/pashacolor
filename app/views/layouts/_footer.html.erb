<!-- ボトムナビゲーション -->
<nav class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 px-2 py-1 z-40">
  <div class="flex justify-around items-center">
    <%= link_to root_path, class: "flex flex-col items-center gap-0.5 py-1.5 px-2 #{current_page?(root_path) ? 'text-green-600' : 'text-gray-400'} hover:text-green-600 transition-colors" do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
      </svg>
      <span class="text-[10px] <%= current_page?(root_path) ? 'font-semibold' : '' %>">ホーム</span>
    <% end %>
    
    <button class="flex flex-col items-center gap-0.5 py-1.5 px-2 text-gray-400 hover:text-green-600 transition-colors" disabled>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <span class="text-[10px]">パレット</span>
    </button>
    
    <% if user_signed_in? %>
      <%= link_to posts_path, class: "flex flex-col items-center gap-0.5 py-1.5 px-2 #{current_page?(posts_path) ? 'text-green-600' : 'text-gray-400'} hover:text-green-600 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <span class="text-[10px] <%= current_page?(posts_path) ? 'font-semibold' : '' %>">投稿</span>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path, class: "flex flex-col items-center gap-0.5 py-1.5 px-2 text-gray-400 hover:text-green-600 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <span class="text-[10px]">投稿</span>
      <% end %>
    <% end %>
    
    <% if user_signed_in? %>
      <%= link_to edit_user_registration_path, class: "flex flex-col items-center gap-0.5 py-1.5 px-2 #{current_page?(edit_user_registration_path) ? 'text-green-600' : 'text-gray-400'} hover:text-green-600 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span class="text-[10px] <%= current_page?(edit_user_registration_path) ? 'font-semibold' : '' %>">マイページ</span>
      <% end %>
    <% else %>
      <%= link_to new_user_registration_path, class: "flex flex-col items-center gap-0.5 py-1.5 px-2 text-gray-400 hover:text-green-600 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span class="text-[10px]">マイページ</span>
      <% end %>
    <% end %>
  </div>
</nav>

