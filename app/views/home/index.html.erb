<div class="min-h-screen bg-gray-50 pb-20">
  <div class="px-4 py-4 space-y-4">
    <!-- 今日のお題セクション（目立つカード） -->
    <section class="bg-gradient-to-br from-green-50 to-green-100 rounded-2xl p-6 border-2 border-green-200 shadow-lg">
      <div class="flex items-start justify-between mb-4">
        <div>
          <h2 class="text-sm font-semibold text-green-700 uppercase tracking-wide mb-2">
            今日のお題
          </h2>
          <div class="flex items-center gap-3">
            <% if @today_theme %>
              <div class="w-16 h-16 rounded-full shadow-lg flex items-center justify-center" style="background-color: <%= @today_theme.color_theme.color_code %>;">
              </div>
              <div>
                <p class="text-gray-800 text-lg font-semibold mb-1">
                  今日は「<%= @today_theme.color_theme.color_name %>」色を探してみましょう！
                </p>
                <p class="text-gray-600 text-sm">
                  <%= @today_theme.color_theme.color_name %>いものを見つけたら、写真を撮って投稿しよう
                </p>
              </div>
            <% else %>
              <div class="w-16 h-16 rounded-full shadow-lg flex items-center justify-center bg-gray-200">
              </div>
              <div>
                <p class="text-gray-800 text-lg font-semibold mb-1">
                  今日のお題を読み込み中...
                </p>
              </div>
            <% end %>
          </div>
        </div>
        <button class="text-gray-400 hover:text-gray-600">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- 投稿ボタン -->
      <div class="mt-6">
        <% if user_signed_in? %>
          <%= link_to new_post_path(color_theme_id: @today_theme&.color_theme_id), class: "w-full bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-6 rounded-xl transition-colors duration-200 shadow-md block text-center" do %>
            <div class="flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              <span>今日のお題で投稿する</span>
            </div>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "w-full bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-6 rounded-xl transition-colors duration-200 shadow-md block text-center" do %>
            <div class="flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
              </svg>
              <span>ログインして投稿</span>
            </div>
          <% end %>
        <% end %>
      </div>
    </section>


    <!-- おすすめの情報セクション -->
    <section class="mt-6">
      <div class="flex items-center gap-2 mb-4">
        <span class="text-2xl">🎨</span>
        <h2 class="text-lg font-semibold text-gray-800">
          おすすめの色情報を持ってきたよ！
        </h2>
      </div>
      
      <!-- 横スクロール可能なカード -->
      <div class="flex gap-4 overflow-x-auto pb-2 scrollbar-hide" style="scrollbar-width: none; -ms-overflow-style: none;">
        <% 
          color_suggestions = [
            { name: "赤", code: "#FF0000", tip: "夕焼けやトマト、赤い看板など" },
            { name: "青", code: "#0000FF", tip: "空や海、青い看板など" },
            { name: "緑", code: "#00FF00", tip: "木々や葉野菜、自然の緑など" },
            { name: "黄", code: "#FFFF00", tip: "イチョウやチーズ、暖色照明など" },
            { name: "紫", code: "#8000FF", tip: "紫陽花やラベンダーなど" },
            { name: "橙", code: "#FFA500", tip: "オレンジや夕日など" }
          ]
        %>
        <% color_suggestions.each do |suggestion| %>
          <div class="flex-shrink-0 w-64 bg-white rounded-xl shadow-md overflow-hidden border-2 border-gray-100">
            <div class="h-32 flex items-center justify-center" style="background-color: <%= suggestion[:code] %>;">
              <span class="text-white text-2xl font-bold"><%= suggestion[:name] %></span>
            </div>
            <div class="p-4">
              <h3 class="font-semibold text-gray-800 mb-2"><%= suggestion[:name] %>色の見つけ方</h3>
              <p class="text-sm text-gray-600"><%= suggestion[:tip] %></p>
          </div>
          </div>
        <% end %>
      </div>
    </section>

    </div>
</div>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>

