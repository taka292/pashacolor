<div class="min-h-screen bg-gray-50 pb-20">
  <div class="px-4 py-4 space-y-4">
    <!-- 今日のお題セクション（目立つカード） -->
    <section class="bg-gradient-to-br from-green-50 to-green-100 rounded-2xl p-6 border-2 border-green-200 shadow-lg">
      <div class="flex items-start justify-between mb-4">
        <div>
          <h2 class="text-sm font-semibold text-green-700 uppercase tracking-wide mb-2">
            今日のお題
          </h2>
          <div class="flex items-center gap-3">
            <div class="w-16 h-16 rounded-full shadow-lg flex items-center justify-center" style="background-color: #FF0000;">
            </div>
            <div>
              <p class="text-gray-800 text-lg font-semibold mb-1">
                今日は「赤」色を探してみましょう！
              </p>
              <p class="text-gray-600 text-sm">
                赤いものを見つけたら、写真を撮って投稿しよう
              </p>
    </div>
          </div>
        </div>
        <button class="text-gray-400 hover:text-gray-600">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- お題の詳細情報 -->
      <div class="bg-white rounded-lg p-3 mt-4">
        <div class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          <span>このお題に投稿すると、カラーパレットが埋まります</span>
        </div>
      </div>
    </section>

    <!-- アクションボタン -->
    <div class="grid grid-cols-2 gap-3">
      <button class="bg-white border-2 border-green-200 rounded-xl p-4 flex items-center justify-center gap-2 hover:bg-green-50 transition-colors" disabled>
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span class="text-green-700 font-semibold">カラーパレット</span>
        <span class="text-xs text-gray-400 ml-2">(準備中)</span>
      </button>
      <% if user_signed_in? %>
        <%= link_to posts_path, class: "bg-white border-2 border-green-200 rounded-xl p-4 flex items-center justify-center gap-2 hover:bg-green-50 transition-colors" do %>
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="text-green-700 font-semibold">投稿一覧</span>
        <% end %>
      <% else %>
        <%= link_to new_user_session_path, class: "bg-white border-2 border-green-200 rounded-xl p-4 flex items-center justify-center gap-2 hover:bg-green-50 transition-colors" do %>
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="text-green-700 font-semibold">投稿一覧</span>
        <% end %>
      <% end %>
    </div>

    <!-- 色相環セクション -->
    <section class="bg-white rounded-2xl shadow-md p-6">
      <h2 class="text-lg font-semibold text-gray-800 mb-4 text-center">
        色を選択して投稿する
      </h2>
      
      <!-- 円形の色相環 -->
      <div class="flex justify-center items-center mb-6">
        <div class="relative" style="width: 320px; height: 320px;">
          <% 
            colors = [
              { name: "黄", code: "#FFFF00", angle: 0 },
              { name: "黄緑", code: "#ADFF2F", angle: 30 },
              { name: "緑", code: "#00FF00", angle: 60 },
              { name: "青緑", code: "#00FFFF", angle: 90 },
              { name: "青", code: "#0000FF", angle: 120 },
              { name: "青紫", code: "#8A2BE2", angle: 150 },
              { name: "紫", code: "#8000FF", angle: 180 },
              { name: "赤紫", code: "#FF00FF", angle: 210 },
              { name: "赤", code: "#FF0000", angle: 240 },
              { name: "赤橙", code: "#FF4500", angle: 270 },
              { name: "橙", code: "#FFA500", angle: 300 },
              { name: "黄橙", code: "#FFD700", angle: 330 }
            ]
            radius = 130
            center_x = 160
            center_y = 160
          %>
          
          <% colors.each_with_index do |color, index| %>
            <% 
              angle_rad = (color[:angle] - 90) * Math::PI / 180
              x = center_x + radius * Math.cos(angle_rad)
              y = center_y + radius * Math.sin(angle_rad)
            %>
            <button 
              class="color-segment absolute rounded-full border-3 border-white shadow-lg hover:shadow-xl hover:scale-110 transition-all duration-200 focus:outline-none"
              style="
                width: 55px;
                height: 55px;
                background-color: <%= color[:code] %>;
                left: <%= x - 27.5 %>px;
                top: <%= y - 27.5 %>px;
                transform: translate(0, 0);
              "
              data-color="<%= color[:name] %>"
              data-color-code="<%= color[:code] %>"
              title="<%= color[:name] %>"
            >
              <span class="sr-only"><%= color[:name] %></span>
            </button>
          <% end %>

          <!-- 中央の円 -->
          <div 
            class="absolute rounded-full border-4 border-green-200 bg-white shadow-lg"
            style="
              width: 110px;
              height: 110px;
              left: 105px;
              top: 105px;
            "
          >
            <div class="flex flex-col items-center justify-center h-full">
              <svg class="w-8 h-8 text-green-500 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
              <span class="text-gray-600 text-xs font-semibold">色を選択</span>
          </div>
          </div>
        </div>
      </div>

      <!-- 選択された色の表示 -->
      <div id="selected-color-display" class="text-center hidden mb-4">
        <div class="inline-flex items-center gap-3 bg-green-50 rounded-full px-6 py-3 border-2 border-green-200">
          <div class="w-10 h-10 rounded-full shadow-md" id="selected-color-circle"></div>
          <div>
            <p class="text-xs text-gray-600">選択中の色</p>
            <p class="text-lg font-bold text-gray-800" id="selected-color-name"></p>
          </div>
        </div>
      </div>

      <!-- 投稿ボタン -->
      <% if user_signed_in? %>
        <%= link_to new_post_path, class: "w-full bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-6 rounded-xl transition-colors duration-200 shadow-md block" do %>
          <div class="flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            <span>投稿する</span>
          </div>
        <% end %>
      <% else %>
        <%= link_to new_user_session_path, class: "w-full bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-6 rounded-xl transition-colors duration-200 shadow-md block" do %>
          <div class="flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
            </svg>
            <span>ログインして投稿</span>
          </div>
        <% end %>
      <% end %>
    </section>

    <!-- おすすめの情報セクション -->
    <section class="mt-6">
      <div class="flex items-center gap-2 mb-4">
        <span class="text-2xl">🎨</span>
        <h2 class="text-lg font-semibold text-gray-800">
          おすすめの色情報を持ってきたよ！
        </h2>
      </div>
      
      <!-- 横スクロール可能なカード -->
      <div class="flex gap-4 overflow-x-auto pb-2 scrollbar-hide" style="scrollbar-width: none; -ms-overflow-style: none;">
        <% 
          color_suggestions = [
            { name: "赤", code: "#FF0000", tip: "夕焼けやトマト、赤い看板など" },
            { name: "青", code: "#0000FF", tip: "空や海、青い看板など" },
            { name: "緑", code: "#00FF00", tip: "木々や葉野菜、自然の緑など" },
            { name: "黄", code: "#FFFF00", tip: "イチョウやチーズ、暖色照明など" },
            { name: "紫", code: "#8000FF", tip: "紫陽花やラベンダーなど" },
            { name: "橙", code: "#FFA500", tip: "オレンジや夕日など" }
          ]
        %>
        <% color_suggestions.each do |suggestion| %>
          <div class="flex-shrink-0 w-64 bg-white rounded-xl shadow-md overflow-hidden border-2 border-gray-100">
            <div class="h-32 flex items-center justify-center" style="background-color: <%= suggestion[:code] %>;">
              <span class="text-white text-2xl font-bold"><%= suggestion[:name] %></span>
            </div>
            <div class="p-4">
              <h3 class="font-semibold text-gray-800 mb-2"><%= suggestion[:name] %>色の見つけ方</h3>
              <p class="text-sm text-gray-600"><%= suggestion[:tip] %></p>
          </div>
          </div>
        <% end %>
      </div>
    </section>

    </div>
</div>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>
